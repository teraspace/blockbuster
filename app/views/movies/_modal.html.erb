<!-- Modal -->
<div  class="myModal" 
      tabindex="-1"
      style="display: none;" 
      id="info_modal"
      role="dialog" 
      aria-labelledby="myModalLabel">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h1 id="movie_name" class="modal-name"></h1>
        <button type="button" 
                class="close" 
                data-dismiss="modal" 
                aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
        <div class="modal-body">
          <div class="loaded-data">
            <h3 class="modal-synopsis"></h3>
            <p class="modal-producer"></p>
            
            <p class="modal-country"></p>
          </div><!-- loaded-data -->
        </div><!-- modal-body -->
    </div>
  </div>
</div>